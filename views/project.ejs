<%- include('partials/navbar', { page: '' }) %>

<div class="container mx-auto p-6">
  <h1 class="text-3xl font-bold mb-4"><%= project.title %></h1>

  <img src="<%= project.feature_img_url %>" alt="<%= project.title %>" class="w-full h-64 object-cover rounded mb-4">

  <p class="text-sm text-gray-600 mb-2">Sector: <strong><%= project.Sector.sector_name %></strong></p>

  <div class="mb-4">
    <h2 class="text-xl font-semibold">Introduction</h2>
    <p><%= project.intro_short %></p>
  </div>

  <div class="mb-4">
    <h2 class="text-xl font-semibold">Summary</h2>
    <p><%= project.summary_short %></p>
  </div>

  <div class="mb-4">
    <h2 class="text-xl font-semibold">Impact</h2>
    <p><%= project.impact %></p>
  </div>

  <div>
    <a href="<%= project.original_source_url %>" target="_blank" class="text-blue-600 underline">View Source</a>
  </div>
</div>
