<%- include('partials/navbar', { page: '/solutions/projects' }) %>

<div class="container mx-auto p-6">
  <h1 class="text-3xl font-bold mb-6">All Projects</h1>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
    <% projects.forEach(project => { %>
      <div class="border rounded p-4 shadow hover:shadow-lg transition">
        <img src="<%= project.feature_img_url %>" alt="<%= project.title %>" class="w-full h-40 object-cover mb-4">
        <h2 class="text-xl font-semibold mb-2"><%= project.title %></h2>
        <p class="text-sm text-gray-600 mb-2"><%= project.Sector.sector_name %></p>
        <p class="text-sm"><%= project.summary_short.substring(0, 100) %>...</p>
        <a href="/solutions/project/<%= project.id %>" class="inline-block mt-4 text-blue-600 underline">Read more</a>
      </div>
    <% }) %>
  </div>
</div>
